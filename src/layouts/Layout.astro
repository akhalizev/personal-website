---
import DarkModeToggle from '../components/DarkModeToggle.astro';
import { personalInfo } from '../utils/personal';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Modern portfolio website" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Basic contact / social -->
    <meta name="author" content={personalInfo.name} />
    <link rel="me" href={`mailto:${personalInfo.email}`} />
    <link rel="me" href={personalInfo.github} />
    <link rel="me" href={personalInfo.linkedin} />
    <meta name="contact:email" content={personalInfo.email} />
    <meta name="og:email" content={personalInfo.email} />
    <meta name="og:site_name" content={personalInfo.name} />
    <meta name="twitter:creator" content={`@${personalInfo.github.split('/').pop()}`} />
    <!-- JSON-LD Person schema -->
    <script type="application/ld+json">{JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'Person',
      name: personalInfo.name,
      email: `mailto:${personalInfo.email}`,
      url: personalInfo.github,
      sameAs: [personalInfo.github, personalInfo.linkedin]
    })}</script>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    
    <!-- Prevent flash of unstyled content -->
    <script>
      // Set theme immediately to prevent flash
      (function() {
        const savedTheme = localStorage.getItem('theme');
        const systemPrefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        
        if (savedTheme === 'dark' || (!savedTheme && systemPrefersDark)) {
          document.documentElement.classList.add('dark');
        } else {
          document.documentElement.classList.remove('dark');
        }
      })();
    </script>
    
    <!-- macOS-style system fonts -->
    <style>
      * {
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }
    </style>
  </head>
  <body class="bg-macos-gray-50 dark:bg-macos-gray-900 text-macos-gray-900 dark:text-macos-gray-100 font-sf-pro">
    <slot />
    <footer class="mt-32 pb-12 pt-8 border-t border-macos-gray-200 dark:border-macos-gray-800 text-center text-sm text-macos-gray-500 dark:text-macos-gray-400">
      <div class="flex flex-col items-center gap-4">
        <div class="flex gap-4 flex-wrap justify-center">
          <a href={`mailto:${personalInfo.email}`} class="hover:text-macos-blue-500 dark:hover:text-macos-blue-400 font-medium">{personalInfo.email}</a>
          <span aria-hidden="true" class="hidden sm:inline">•</span>
          <a href={personalInfo.github} target="_blank" rel="noopener noreferrer" class="hover:text-macos-blue-500 dark:hover:text-macos-blue-400 font-medium">GitHub</a>
          <span aria-hidden="true" class="hidden sm:inline">•</span>
          <a href={personalInfo.linkedin} target="_blank" rel="noopener noreferrer" class="hover:text-macos-blue-500 dark:hover:text-macos-blue-400 font-medium">LinkedIn</a>
        </div>
        <div>
          &copy; {new Date().getFullYear()} {personalInfo.name}. All rights reserved.
        </div>
      </div>
    </footer>
    <DarkModeToggle />
  </body>
</html>
