---
export interface Props {
  title: string;
  description: string;
  image?: string;
  technologies: string[];
  githubUrl?: string;
  liveUrl?: string;
  category?: string;
}

const { 
  title, 
  description, 
  image, 
  technologies, 
  githubUrl, 
  liveUrl,
  category 
} = Astro.props;
---

<div class="group bg-white/60 dark:bg-macos-gray-800/60 backdrop-blur-macos border border-white/30 dark:border-macos-gray-700/30 rounded-macos shadow-macos hover:shadow-macos-lg transition-all duration-300 hover:scale-105">
  {image && (
    <div class="relative overflow-hidden rounded-t-macos">
      <img 
        src={image} 
        alt={title}
        class="w-full h-48 object-cover group-hover:scale-110 transition-transform duration-300"
      />
      {category && (
        <div class="absolute top-3 left-3">
          <span class="bg-macos-blue-500 text-white text-xs px-2 py-1 rounded-md font-medium">
            {category}
          </span>
        </div>
      )}
    </div>
  )}
  
  <div class="p-6">
    <h3 class="text-xl font-semibold text-macos-gray-900 dark:text-macos-gray-100 mb-2">
      {title}
    </h3>
    
    <p class="text-macos-gray-600 dark:text-macos-gray-400 mb-4 line-clamp-3">
      {description}
    </p>
    
    <div class="flex flex-wrap gap-2 mb-4">
      {technologies.map((tech) => (
        <span class="bg-macos-gray-100 dark:bg-macos-gray-700 text-macos-gray-700 dark:text-macos-gray-300 text-xs px-2 py-1 rounded-md">
          {tech}
        </span>
      ))}
    </div>
    
    <div class="flex space-x-3">
      {githubUrl && (
        <a 
          href={githubUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center text-macos-gray-600 dark:text-macos-gray-400 hover:text-macos-blue-500 transition-colors"
        >
          <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0C5.374 0 0 5.373 0 12 0 17.302 3.438 21.8 8.207 23.387c.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"/>
          </svg>
          Code
        </a>
      )}
      
      {liveUrl && (
        <a 
          href={liveUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center text-macos-gray-600 dark:text-macos-gray-400 hover:text-macos-blue-500 transition-colors"
        >
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
          </svg>
          Live Demo
        </a>
      )}
    </div>
  </div>
</div>
