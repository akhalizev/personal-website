---
export interface Props {
  title: string;
  description: string;
  image?: string;
  technologies: string[];
  githubUrl?: string;
  liveUrl?: string;
  category?: string;
}

const { 
  title, 
  description, 
  image, 
  technologies, 
  githubUrl, 
  liveUrl,
  category 
} = Astro.props;
---

<div class="group flex items-center justify-between gap-4 px-4 py-3 bg-white/60 dark:bg-macos-gray-800/60 backdrop-blur-macos border border-white/30 dark:border-macos-gray-700/30 rounded-macos hover:bg-white/80 dark:hover:bg-macos-gray-800/80 transition-colors">
  <div class="flex items-center gap-4 min-w-0">
    {image ? (
      <img 
        src={image} 
        alt={title}
        class="w-12 h-12 rounded-md object-cover flex-shrink-0"
      />
    ) : (
      <div class="w-12 h-12 rounded-md bg-macos-gray-200 dark:bg-macos-gray-700 flex items-center justify-center text-macos-gray-500 dark:text-macos-gray-400 text-sm flex-shrink-0">
        {category ? category[0] : title[0]}
      </div>
    )}

    <div class="min-w-0">
      <h3 class="text-sm sm:text-base font-semibold text-macos-gray-900 dark:text-macos-gray-100 truncate">
        {title}
      </h3>
      <p class="hidden sm:block text-xs text-macos-gray-600 dark:text-macos-gray-400 truncate">
        {description}
      </p>
      <div class="mt-1 flex flex-wrap gap-x-2 gap-y-1 text-[10px] text-macos-gray-600 dark:text-macos-gray-400 max-h-10 overflow-hidden">
        {technologies.slice(0, 6).map((tech) => (
          <span class="px-1.5 py-0.5 rounded bg-macos-gray-100 dark:bg-macos-gray-700/70">{tech}</span>
        ))}
        {technologies.length > 6 && (
          <span class="px-1.5 py-0.5 rounded bg-macos-gray-100 dark:bg-macos-gray-700/70">+{technologies.length - 6}</span>
        )}
      </div>
    </div>
  </div>

  <div class="flex items-center gap-3 flex-shrink-0">
    {githubUrl && (
      <a 
        href={githubUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center text-macos-gray-600 dark:text-macos-gray-400 hover:text-macos-blue-500 transition-colors"
        aria-label="View Code on GitHub"
      >
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path d="M12 0C5.374 0 0 5.373 0 12 0 17.302 3.438 21.8 8.207 23.387c.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"/>
        </svg>
      </a>
    )}

    {liveUrl && (
      <a 
        href={liveUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center text-macos-gray-600 dark:text-macos-gray-400 hover:text-macos-blue-500 transition-colors"
        aria-label="Open Live Demo"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
        </svg>
      </a>
    )}
  </div>
</div>
